<div class="col-6 text-center" style="padding: 20px; background-color: #f2f2f2">
  <% if user.avatar.attached? %>
    <%= image_tag user.avatar, style: "width:150px; height:150px; border-radius: 100%" %>
  <% end %>
  <h1><%= user.username %></h1>
  <h4><%= user.email %></h4>
  <h2><%= user.bio %></h2>
</div>